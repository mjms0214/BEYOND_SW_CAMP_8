<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.beyond.department.mapper.DepartmentMapper">
    <resultMap id="departmentResultMap" type="Department"><!-- 조회 된 결과를 Department 타입으로-->
        <id property="no" column="department_no"/>
        <result property="name" column="department_name"/>
        <result property="category" column="department_name"/>
        <result property="openYn" column="open_yn"/>
        <result property="capacity" column="capacity"/>
    </resultMap>
    
    <select id="selectDepartmentCount" resultType="_int">
        SELECT count(*) FROM tb_department
        <where>
            <if test="openYn != null">
                open_yn=#{openYn}
            </if>
        </where>
    </select>
    
    <select id="selectDepartments" parameterType="string" resultMap="departmentResultMap">
        SELECT department_no,
                       department_name,
                       category,
                       open_yn,
                       capacity
        FROM tb_department
        <if test="openYn != null">
            where open_yn=#{openYn}
        </if>
        ORDER BY department_name ASC
    </select>
</mapper>